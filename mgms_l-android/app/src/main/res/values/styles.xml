<resources>

    <!-- Buttons -->
    <style name="Button" parent="@style/Widget.AppCompat.Button.Colored" />

    <style name="Button.Action">
        <item name="android:theme">@style/MainOverlay</item>
    </style>

    <style name="Button.Borderless" parent="Widget.AppCompat.Button.Borderless" />

    <!-- Text Styles -->
    <style name="TextAppearance.Card.Footer" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black54</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextAppearance.Title.Header" parent="TextAppearance.Title">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="TextAppearance.Title.Content" parent="TextAppearance.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/grey700</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Severity" parent="TextAppearance.Title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LipstickCard" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/z_card</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="DamagesReportCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DamagesCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Lipstick.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">@dimen/z_fab</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ImagesCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DimensionsCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LocationsCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactCard" parent="LipstickCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
